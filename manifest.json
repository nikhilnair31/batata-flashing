{
    "manifest_version": 3,
    "name": "Ext",
    "version": "0.1",
    "description": "Experiments",
    "host_permissions": ["<all_urls>"],
    "permissions": [
        "storage", 
        "activeTab", 
        "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}  